<layout id="WatchFace">
  <drawable id="Calories" class="LabeledValueComponent">
    <param name="controller">Types.Controllers.CALORIES</param>
    <param name="height">48</param>
    <param name="width">280</param>
    <param name="locX">140</param>
    <param name="locY">40</param>
    <param name="hideUnit">false</param>
    <param name="updateInterval">Constants.Values.UPDATE_INTERVAL_LONG</param>
  </drawable>

  <drawable id="CurrentTime" class="ValueComponent">
    <param name="controller">Types.Controllers.CURRENT_TIME</param>
    <param name="height">92</param>
    <param name="width">280</param>
    <param name="locX">140</param>
    <param name="locY">140</param>
    <param name="hideUnit">true</param>
    <param name="updateInterval">Constants.Values.UPDATE_INTERVAL_UNLIMITED</param>
  </drawable>

  <drawable id="Steps" class="ProgressBarComponent">
    <param name="controller">Types.Controllers.STEPS</param>
    <param name="height">2</param>
    <param name="width">240</param>
    <param name="locX">140</param>
    <param name="locY">182</param>
    <param name="hideLabel">true</param>
    <param name="updateInterval">Constants.Values.UPDATE_INTERVAL_LONG</param>
  </drawable>

  <drawable id="BluetoothStatus" class="IconComponent">
    <param name="controller">Types.Controllers.BLUETOOTH_STATUS</param>
    <param name="height">16</param>
    <param name="width">16</param>
    <param name="locX">140</param>
    <param name="locY">212</param>
    <param name="updateInterval">Constants.Values.UPDATE_INTERVAL_SHORT</param>
  </drawable>

  <drawable id="Battery" class="ProgressBarComponent">
    <param name="controller">Types.Controllers.BATTERY</param>
    <param name="height">4</param>
    <param name="width">80</param>
    <param name="locX">140</param>
    <param name="locY">240</param>
    <param name="hideLabel">false</param>
    <param name="updateInterval">Constants.Values.UPDATE_INTERVAL_REALLY_LONG</param>
  </drawable>

  <drawable id="Seconds" class="ArcComponent">
    <param name="controller">Types.Controllers.SECONDS</param>
    <param name="height">8</param>
    <param name="width">16</param>
    <param name="locX">140</param>
    <param name="locY">140</param>
    <param name="radius">140</param>
    <param name="updateInterval">Constants.Values.UPDATE_INTERVAL_UNLIMITED</param>
  </drawable>
</layout>
