<layout id="WatchFace">
  <drawable id="Seconds" class="ArcComponent">
    <param name="controller">Controllers.SECONDS</param>
    <param name="height">8</param>
    <param name="width">16</param>
    <param name="locX">140</param>
    <param name="locY">140</param>
    <param name="radius">140</param>
    <param name="updateInterval">1</param>
  </drawable>

  <drawable id="BluetoothStatus" class="IconComponent">
    <param name="controller">Controllers.BLUETOOTH_STATUS</param>
    <param name="height">16</param>
    <param name="width">16</param>
    <param name="locX">140</param>
    <param name="locY">80</param>
    <param name="updateInterval">30</param>
  </drawable>

  <drawable id="CurrentTime" class="ValueComponent">
    <param name="controller">Controllers.CURRENT_TIME</param>
    <param name="height">70</param>
    <param name="width">280</param>
    <param name="locX">140</param>
    <param name="locY">140</param>
    <param name="updateInterval">1</param>
  </drawable>

  <drawable id="LabeledCurrentTime" class="LabeledValueComponent">
    <param name="controller">Controllers.CURRENT_TIME</param>
    <param name="height">70</param>
    <param name="width">280</param>
    <param name="locX">140</param>
    <param name="locY">200</param>
  </drawable>
</layout>
